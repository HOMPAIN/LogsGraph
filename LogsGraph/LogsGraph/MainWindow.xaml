<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogsGraph"
        xmlns:oxy="http://oxyplot.org/wpf" x:Class="LogsGraph.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Импорт данных">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Графики">
                <Grid Background="#FF00E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Кнопки управления -->
                        <RowDefinition Height="*"/>
                        <!-- Список графиков -->
                    </Grid.RowDefinitions>

                    <!-- Панель управления -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="AddButton" Content="Добавить график" 
                    Click="AddButton_Click" Padding="12,6" Margin="0,0,10,0"/>

                        <Button x:Name="RemoveButton" Content="Удалить последний" 
                    Click="RemoveButton_Click" Padding="12,6" Margin="0,0,10,0"/>

                        <Button x:Name="ClearButton" Content="Очистить всё" 
                    Click="ClearButton_Click" Padding="12,6" Margin="0,0,10,0"/>

                        <TextBlock x:Name="CounterText" Text="Графиков: 0" 
                       VerticalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Контейнер для графиков -->
                    <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="PlotsContainer" />
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
