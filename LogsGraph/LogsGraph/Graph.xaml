<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogsGraph"
             xmlns:oxy="http://oxyplot.org/wpf" x:Class="LogsGraph.Graph"
             mc:Ignorable="d" Height="148"
            d:DesignWidth="800">
    <Grid >

        <oxy:PlotView x:Name="Plot" Background="#FFDAC646" BorderThickness="1" BorderBrush="Black"/>
        <UniformGrid Rows="6" Columns="1" Width="50" HorizontalAlignment="Left" Margin="5">
            <Button Content="^" Click="ClickHide" />
            <Button Content="Size +" Click="ClickSizeAdd"/>
            <Button Content="Size -" Click="ClickSizeSub"/>
            <Button Content="Graphycs" Click="ClickGraphSettings"/>
            <Button Content="Del" Click="ClickDell"/>
            <Button Content="Add" Click="ClickAdd"/>
        </UniformGrid>
        <Button x:Name="BHide" Visibility="Hidden" Content="Show" Width="55" HorizontalAlignment="Left" Click="ClickShow"/>
    </Grid>
</UserControl>
